{
  "name": "yggdrasil",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/startServer",
    "test": "npm run test:lint && npm run test:unit && [ -f /run.sh ] && npm run test:functional || docker exec -ti backend bash -c 'cd /var/app && npm run test:functional' && npm run coverage-combine",
    "test:lint": "eslint --max-warnings=0 ./bin ./lib ./yggdrasil.js ./features",
    "test:unit": "nyc --temp-directory ./.nyc_output --report-dir coverage --reporter=text-summary --reporter=lcov mocha && npm run unit:coverage-summary",
    "test:functional": "./features/run.sh && npm run func:coverage-summary",
    "test:func": "docker exec -ti backend bash -c 'cd /var/app && npm run test:functional'",
    "unit:coverage-summary": "ci/coverage-summary > coverage/coverage.txt",
    "func:coverage-summary": "ci/func.coverage-summary > coverage.functional/coverage.txt",
    "coverage-combine": "cat coverage/coverage.txt > coverage/coverage.combined.txt && cat coverage.functional/coverage.txt >> coverage/coverage.combined.txt"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "postcommit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "_moduleAliases": {
    "@lib": "lib",
    "@utils": "lib/utils",
    "@models": "lib/models",
    "@repositories": "lib/models/repositories",
    "@root": "./",
    "@unitTests": "unitTests"
  },
  "dependencies": {
    "acorn": "^6.2.0",
    "asana": "^0.16.6",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.3",
    "cli-color": "^1.3.0",
    "commander": "^2.18.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "docx-pdf": "0.0.1",
    "docxtemplater": "^3.9.9",
    "docxtemplater-image-module": "^3.1.0",
    "dot-object": "^1.7.0",
    "express": "^4.16.3",
    "express-fileupload": "^1.1.6",
    "express-jwt": "^5.3.1",
    "faker": "^4.1.0",
    "gauge": "^2.7.4",
    "generate-password": "^1.5.0",
    "globby": "^7.1.1",
    "helmet": "^3.21.1",
    "http-proxy-agent": "^2.1.0",
    "https-proxy-agent": "^2.2.1",
    "ical-toolkit": "^1.0.9",
    "image-data-uri": "^2.0.0",
    "image-size": "^0.7.4",
    "ioredis": "^3.2.1",
    "jsonwebtoken": "^8.3.0",
    "jszip": "^2.6.1",
    "lodash": "^4.17.13",
    "lorem-ipsum": "^1.0.6",
    "mime-to-extensions": "^1.0.2",
    "moment": "^2.22.2",
    "mongodb": "^3.1.6",
    "morgan": "^1.9.1",
    "node-geocoder": "^3.22.0",
    "node-mailjet": "^3.2.1",
    "nodemailer": "^4.6.8",
    "proxy-chain": "^0.2.7",
    "pug": "^2.0.3",
    "puppeteer-core": "^1.10.0",
    "qs": "^6.8.0",
    "rc": "^1.2.8",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "serve-favicon": "~2.4.2",
    "slugification": "^0.0.2",
    "socket.io": "^2.1.1",
    "socketio-jwt": "^4.5.0",
    "unzipper": "^0.8.14",
    "winston": "^2.4.4"
  },
  "devDependencies": {
    "bcrypt-nodejs": "0.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cucumber": "^5.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "husky": "^2.3.0",
    "json5": "^2.1.0",
    "lint-staged": "^8.1.7",
    "mocha": "^6.1.4",
    "module-alias": "^2.2.0",
    "nock": "^9.6.1",
    "nyc": "^14.1.0",
    "rewire": "^2.5.2",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "socket.io-client": "^2.3.0"
  }
}
